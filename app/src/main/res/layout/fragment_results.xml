<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:clipToPadding="false"
             android:clipChildren="false"
             xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zkhaider.bernievshillary.widgets.TriangleBackgroundView
        android:id="@+id/tv1"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:ratio1="0.7"
        app:ratio2="0.75"
        app:foregroundColor="@color/bernieColor"
        app:backgroundColor="@android:color/transparent"/>

    <ImageView
        android:id="@+id/ivRays"
        android:paddingTop="32dp"
        android:paddingRight="32dp"
        android:paddingEnd="32dp"
        android:layout_marginLeft="-100dp"
        android:layout_marginStart="-100dp"
        android:layout_marginBottom="-120dp"
        android:scaleType="centerCrop"
        android:cropToPadding="false"
        android:scaleY="1.9"
        android:scaleX="1.9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/llBernie"
        android:weightSum="2"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivWinner"
            android:src="@drawable/bernie_big"
            android:layout_marginLeft="-150dp"
            android:layout_marginStart="-150dp"
            android:layout_marginTop="56dp"
            android:layout_weight="1"
            android:layout_width="500dp"
            android:layout_height="0dp"/>

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:gravity="center_vertical|end"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvHigherScore"
            android:textSize="72sp"
            android:textColor="@android:color/white"
            android:text="80%"
            android:shadowRadius="2"
            android:shadowDy="2"
            android:shadowColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvWinner"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:text="@string/bernie_sanders"
            android:shadowRadius="2"
            android:shadowDy="2"
            android:shadowColor="@android:color/black"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.zkhaider.bernievshillary.widgets.TriangleBackgroundView
        android:id="@+id/tv2"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:ratio1="0.7"
        app:ratio2="0.75"
        app:foregroundColor="@android:color/transparent"
        app:backgroundColor="@color/hillaryColor"/>

    <LinearLayout
        android:id="@+id/llHillary"
        android:weightSum="2"
        android:orientation="vertical"
        android:gravity="bottom|end"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivLoser"
            android:src="@drawable/hillary_big"
            android:layout_weight="1"
            android:layout_marginEnd="-24dp"
            android:layout_marginRight="-24dp"
            android:layout_marginBottom="-100dp"
            android:layout_width="150dp"
            android:layout_height="0dp"/>

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        android:gravity="start|bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvLowerScore"
            android:textSize="56sp"
            android:textColor="@android:color/white"
            android:text="20%"
            android:shadowRadius="2"
            android:shadowDy="2"
            android:shadowColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvLoser"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="@string/hillary_clinton"
            android:shadowRadius="2"
            android:shadowDy="2"
            android:shadowColor="@android:color/black"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</FrameLayout>